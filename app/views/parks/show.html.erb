<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @parks.banner_url %>);">
  <div class="container">
    <h1><%= @parks.name %></h1>
  </div>
</div>

<div class="container mt-3">
  <div class="row">
    <div class="col-9">
      <div class="row">
        <%# splits into 12 columns %>
        <% @parks.animals.each do |animal| %>
          <div class="col-4">
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= animal.image_url %>)">
              <%= animal.name %>
              <%= link_to 'remove', animal_path(animal), data: { turbo_method: :delete, turbo_confirm: 'Why?! Are you sure?'} %>
              <div class="chores">
                <% animal.animal_chores.each do |animal_chore| %>
                  <span><%= animal_chore.chore.name %></span>
                <% end %>
                <%= link_to new_animal_animal_chore_path(animal) do %>
                  <i class="fa-regular fa-square-check"></i>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-3">
      <h4>Add your animal</h4>
      <%= simple_form_for([@parks, @animal]) do |f| %>
        <%= f.input :name %>
        <%= f.input :image_url %>
        <%= f.submit 'Add', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>



</div>
